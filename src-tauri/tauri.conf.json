{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDF to CBZ Converter",
  "version": "1.0.7",
  "identifier": "com.pdf-to-cbz.converter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PDF to CBZ Converter",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../resources/pdfium/pdfium.dll",
      "../resources/pdfium/libpdfium.so",
      "../resources/pdfium/libpdfium.dylib"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      }
    }
  }
}
